# EditorConfig is awesome: https://EditorConfig.org
# Essential editorconfig for all projects

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
# tab_width = 4
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
# whitespaces at end of lines in markdown files have special meaning
trim_trailing_whitespace = false
